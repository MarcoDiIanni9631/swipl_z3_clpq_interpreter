(set-logic HORN)

(declare-fun |hit| (Int Int Int) Bool)
(declare-fun |incorrect| () Bool)

(assert
  (forall ((A Int) (B Int) (C Int))
    (=>
      (and
        (=> (= A 10) (= B 3))   ; ðŸ‘ˆ implicazione interna
        (= C 7)
      )
      (hit A B C)
    )
  )
)

(assert
  (forall ((A Int) (B Int) (C Int))
    (=>
      (hit A B C)
      incorrect
    )
  )
)

(assert
  (forall ((dummy Bool))
    (=>
      incorrect
      false
    )
  )
)

(check-sat)
(exit)
